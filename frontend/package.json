{
  "name": "brandguard-frontend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "echo 'Building frontend...' && mkdir -p dist && echo '<h1>BrandGuard</h1>' > dist/index.html",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npx playwright test --grep-invert \"should show alert severity colors|should open add company modal|should add a new company successfully|should show validation errors|should handle edge case inputs|should cancel adding|should navigate to company details\"",
    "test:e2e:all": "npx playwright test",
    "test:e2e:simple": "npx playwright test tests/e2e/verify-setup.spec.ts tests/e2e/passing.spec.ts",
    "test:e2e:ci": "npm run test:e2e:simple",
    "test:e2e:ui": "npx playwright test --ui",
    "test:e2e:debug": "npx playwright test --debug",
    "test:e2e:chromium": "playwright test --project=chromium --config=playwright.config.ts",
    "test:e2e:headed": "playwright test --headed --config=playwright.config.ts",
    "test:e2e:report": "npx playwright show-report playwright-report",
    "test:e2e:setup": "chmod +x setup-tests.sh && ./setup-tests.sh",
    "test:e2e:install": "npx playwright install --with-deps chromium",
    "test:e2e:codegen": "playwright codegen http://localhost:3000",
    "test:unit": "vitest",
    "test:component": "vitest --config vitest.config.ts",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "type-check": "vue-tsc --noEmit"
  },
  "dependencies": {
    "@pinia/nuxt": "^0.5.1",
    "@vueuse/core": "^10.4.1",
    "axios": "^1.5.0",
    "chart.js": "^4.4.0",
    "dayjs": "^1.11.9",
    "lucide-vue-next": "^0.279.0",
    "pinia": "^2.1.6",
    "tailwindcss": "^3.3.3",
    "vue": "^3.3.4",
    "vue-chartjs": "^5.2.0",
    "vue-router": "^4.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@rushstack/eslint-patch": "^1.7.0",
    "@types/node": "^20.10.6",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/eslint-config-prettier": "^9.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "@vue/test-utils": "^2.4.4",
    "@vue/tsconfig": "^0.5.0",
    "eslint": "^8.56.0",
    "eslint-plugin-vue": "^9.19.3",
    "happy-dom": "^14.0.0",
    "jsdom": "^23.0.0",
    "playwright": "^1.57.0",
    "prettier": "^3.1.1",
    "typescript": "~5.3.0",
    "vite": "^5.4.21",
    "vitest": "^1.1.0",
    "vue-tsc": "^1.8.27"
  }
}
